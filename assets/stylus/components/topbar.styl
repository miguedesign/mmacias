.header 
	font-family font-bold
	font-weight 100
	padding-top 50px
	position relative
	z-index 1000
	.container
		row()
		justify(between)

.nav
	&-list
		list-style none
		padding 0
		margin 0
		li
			display inline-block
			margin 0 10px 0 0
			p, a
				font-size 14px
				margin 0
			p
				font-family font-light
				font-weight 100
				text-transform uppercase
		.dropdown
			position relative
			&>a
				position relative
				padding-right 30px
				&::before,
				&::after
					position absolute
					content ''
					display block
					width 8px
					height 2px
					background-color dark-color
				&::before
					transform rotate(45deg)
					top 50%
					right 10px
				&::after
					top 50%
					right 6px
					transform rotate(-45deg)
					

			&:hover
				.submenu
					height auto
					top 100%
					opacity 1
	&-item
		text-decoration none
		display block
		line-height 40px
		color dark-color
		padding 0 5px
		&:hover
			background-color rgba(dark-color, .05)
	.submenu
			background-color white-color
			position absolute
			width 200px
			height 0
			overflow hidden
			top 80%
			opacity 0
			transition all .5s cubic-bezier(0.22, 0.61, 0.36, 1)
			box-shadow 0px 0px 8px -5px rgba(0,0,0,0.12), 0px 8px 12px -5px rgba(0,0,0,0.24)
			li
				display block
				margin 0
				a
					padding 0 20px
