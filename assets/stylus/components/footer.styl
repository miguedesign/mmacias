.footer
  background-color light-color
  display block
  padding 40px
  position relative
  &-list
    vertical-align middle
    display inline-block
    padding 0
    margin 0
    li
      display inline-block
      margin-right 10px
      p
        font-size 14px
        margin 0
  &-design
    position absolute
    right 40px
    top 40px
    a
      font-weight 600
      color dark-color 
      padding 10px
      &:hover
        color blueDark-color
        background-color rgba(blueDark-color, .05)