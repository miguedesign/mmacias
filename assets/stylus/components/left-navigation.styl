/* Touch devices */
.cd-nav-trigger
    display block
    z-index 2000
    position fixed
    bottom 30px
    right 5%
    height 44px
    width 44px
    border-radius 0.25em
    background rgba(primary-color, 0.8)
    span
        position absolute
        height 4px
        width 4px
        background-color #3e3947
        border-radius 50%
        left 50%
        top 50%
        bottom auto
        right auto
        transform translateX(-50%) translateY(-50%)
        &::before,
        &::after
            content ''
            height 100%
            width 100%
            position absolute
            left 0
            background-color inherit
            border-radius inherit
        &::before
            top -9px
        &::after
            bottom -9px
#cd-vertical-nav
    position fixed
    z-index 1
    right 5%
    bottom 30px
    width 90%
    max-width 400px
    max-height 90%
    // overflow-y scroll
    -webkit-overflow-scrolling touch
    transform-origin right bottom
    transform scale(0)
    transition-property transform
    transition-duration 0.2s
    border-radius 0.25em
    background rgba(dark-color, 0.9)
    
    a
        display block
        max-width 90%
        color white-color
        padding 1em
        border-bottom 1px solid rgba(white-color, 0.2)
        // span
        //     &:first-child
        //         display none
        // &.is-selected
        //     span
        //         &:last-child
        //             color dark-color
    &.open
        transform scale(1)
        & + .cd-nav-trigger
            background rgba(primary-color, 0)
            span
                background-color rgba(62, 57, 71, 0)
                &::before,
                &::after
                    background-color primary-color
                    height 3px
                    width 20px
                    border-radius 0
                    left -8px
                &::before
                    transform rotate(45deg)
                    top 1px
                &::after
                    transform rotate(135deg)
                    bottom 0
        li
            &:last-child
                a
                    border-bottom none



@media only screen and (min-width: 1024px)
    /* No Touch devices */
    .cd-nav-trigger
        display none

    .cd-nav-trigger,
    #cd-vertical-nav
        bottom 40px
    
    #cd-vertical-nav
        position fixed
        right 30px
        top 50%
        bottom auto
        transform translateY(-50%)
        z-index 1000
        max-width 200px
        background-color rgba(255, 255, 255, 0)
        li
            text-align right
        a
            display inline-block
            -webkit-backface-visibility hidden
            backface-visibility hidden
            border none
            padding .5em
            &:after
                content ""
                display table
                clear both
            &:hover
                span
                    transform scale(1)
                .cd-label
                    opacity 1
            &.is-selected
                .cd-dot
                    background-color transparent
                    border-color primary-color
                    transform scale(1)
                .cd-label
                    opacity 1
                    transform scale(1)
                
                    
                    
            span
                float right
                display inline-block
                transform scale(0.6)
            
        .cd-dot
            position relative
            top 8px
            height 12px
            width 12px
            border-radius 50%
            background-color primary-color
            transition transform 0.2s, background-color 0.5s
            border solid 2px primary-color
            transform-origin 50% 50%
            
        .cd-label
            position relative
            margin-right 10px
            // padding .4em .5em
            line-height 25px
            color primary-color
            font-size 14px
            font-size 0.875rem
            transition transform 0.2s, opacity 0.2s
            opacity 0
            transform-origin 100% 50%