#cd-vertical-nav
  display block
  width 100%
  background-color white-color
  margin-top 40px
  &.is-scrolled
    position fixed
    top 68px
    left 0
    z-index 1000
    margin-top 0
    border-bottom solid 1px smoke-color
    padding-left 20px
  ul
    padding 0
    margin 0
    text-align left
  li
    display inline-block
    margin-right 10px
  a
    display block
    max-width 90%
    color dark-color
    padding 10px 0
    font-size 12px
    border-bottom 1px solid rgba(white-color, 0.2)
    /*----------------------------
      Colors
      ----------------------------*/
    &.purple
      .cd-dot
        background-color purple-color
      .cd-label
        color purple-color
    &.pink
      .cd-dot
        background-color pink-color
      .cd-label
        color pink-color
    &.blue
      .cd-dot
        background-color blue-color
      .cd-label
        color blue-color
    &.navy
      .cd-dot
        background-color blueDark-color
      .cd-label
        color blueDark-color
    &.yellow
      .cd-dot
        background-color yellow-color
      .cd-label
        color yellow-color


    &.is-selected
      border-top solid 4px
      &.purple
        border-top-color purple-color
      &.pink
        border-top-color pink-color
      &.blue
        border-top-color blue-color
      &.navy
        border-top-color blueDark-color
      &.yellow
        border-top-color yellow-color
  
