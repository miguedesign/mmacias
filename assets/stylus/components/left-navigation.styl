@media screen and (min-width screen_large)
  /* No Touch devices */
  .cd-nav-trigger
    display none

  .cd-nav-trigger,
  #cd-vertical-nav
    display block
    bottom 40px
    background-color transparent
  
  #cd-vertical-nav
    position fixed
    left 30px
    top 50%
    bottom auto
    transform translateY(-50%)
    z-index 2000
    max-width 200px
    transition all .2s cubic-bezier(.8,0,.2,1)
    &:hover
      .cd-label
        opacity 1
    ul
      padding 0
      margin 0
      text-align left
    li
      text-align left
    a
      display block
      padding 5px
      border none
      span
        position relative
        display inline-block
        transition all .2s cubic-bezier(.8,0,.2,1)
      .cd-dot
        background-color rgba(dark-color, .2)
        height 2px
        width 10px
        top -3px
      .cd-label
        line-height 25px
        color dark-color
        font-size 14px
        opacity 0
      /*----------------------------
      Colors
      ----------------------------*/
      &.purple
        .cd-dot
          background-color purple-color
        .cd-label
          color purple-color
      &.pink
        .cd-dot
          background-color pink-color
        .cd-label
          color pink-color
      &.blue
        .cd-dot
          background-color blue-color
        .cd-label
          color blue-color
      &.navy
        .cd-dot
          background-color blueDark-color
        .cd-label
          color blueDark-color
      &.yellow
        .cd-dot
          background-color yellow-color
        .cd-label
          color yellow-color
      &:hover
        span
          transform scale(1)
        .cd-dot 
          width 20px
      &.is-selected
        .cd-dot 
          width 20px
        .cd-label
          opacity 1