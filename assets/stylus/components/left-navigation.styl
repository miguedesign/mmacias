@media screen and (min-width screen_large)
  /* No Touch devices */
  .cd-nav-trigger
    display none

  .cd-nav-trigger,
  #cd-vertical-nav
    display block
    bottom 40px
    background-color transparent
  
  #cd-vertical-nav
    position fixed
    right 30px
    top 50%
    bottom auto
    transform translateY(-50%)
    z-index 2000
    max-width 200px
    transition all .2s cubic-bezier(.8,0,.2,1)
    margin-top 0
    &.is-scrolled
      position fixed
      right 30px
      left auto
      top 50%
      margin-top 0
      border-bottom none
    &:hover
      .cd-label
        opacity 1
    ul
      text-align right
    li
      text-align right
      display block
    a
      display block
      padding 5px
      border none
      span
        position relative
        display inline-block
        transition all .2s cubic-bezier(.8,0,.2,1)
      .cd-dot
        background-color rgba(dark-color, .2)
        height 2px
        width 10px
        top -3px
      .cd-label
        line-height 25px
        color dark-color
        font-size 14px
        opacity 0
      
      &:hover
        span
          transform scale(1)
        .cd-dot 
          width 20px
      &.is-selected
        border none
        .cd-dot 
          width 20px
        .cd-label
          opacity 1