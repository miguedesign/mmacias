@media screen and (min-width screen_large)
  .course
    &Container
      row()
    &Header
      col(12)
      height 200px
      &-title
        font-size 60px
        line-height 60px
        margin-top 70px
    &News
      display inline-block
      col(5)
      &Content
        transition all .2s cubic-bezier(0.22, 0.61, 0.36, 1)
        &.is-scrolled
          width 447.33px
          position fixed
          top 61px

    &Main
      col(5)
      offset(1)
  .courseContent
    &-title
      h2
        font-size 50px
        line-height 50px