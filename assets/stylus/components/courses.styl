.courseHeader
  height 200px
  text-align center
  margin-top 40px
  background-size cover
  background-repeat no-repeat
  background-position 0 0
  &-title
    vertical-align middle
    font-family font-bold
    color white-color
    font-size 60px
    line-height 60px
    margin-top 70px
    display inline-block
    font-weight 100

.courseContent
  margin 60px 0
  &-container
    row()
  &-title
    col(5)
    offset(1)
    h2
      font-family font-light
      font-size 50px
      line-height 50px
      margin 0
  &-lists
    col(5)
    margin-left 1.5%
    
.courseList
  padding 0
  margin 0
  margin-top 20px
  list-style none
  &-item
    margin-bottom 24px
    h3
      margin 0
  &-note
    background-color light-color
    padding 20px
    h3
      font-family font-bold
      margin-bottom 0
      font-weight 100
  &-link
    border-bottom solid 2px smoke-color
    display block
    color dark-color
    position relative
    p
      margin-top 4px
    &::after
      content ''
      display block
      width 56px
      height 56px
      position absolute
      right 0
      top 0
      transition all .5s cubic-bezier(0.22, 0.61, 0.36, 1)
    &::before
      content ''
      display block
      width 24px
      height 24px
      position absolute
      right 0
      top 0
      z-index 10
      padding: 16px
      background-size 24px
      background-repeat no-repeat
      background-position center

    &.download-link
      &::before
        background-image url('../imgs/icon/download-link.png')
      &:hover
        &::before
          background-image url('../imgs/icon/download-link-white.png')
    &.external-link
      &::before
        background-image url('../imgs/icon/external-link.png')
      &:hover
        &::before
          background-image url('../imgs/icon/external-link-white.png')


 
/* Color PURPLR items + titles
_____________________________________________________ */
.purple
  .courseContent
    &-title
      color purple-color
  .courseList
    &-link
      &.download-link,
      &.external-link
        &:hover
          color purple-color
          border-bottom-color purple-color
          &::after
            background-color purple-color

